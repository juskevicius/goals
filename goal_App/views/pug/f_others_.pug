extends a_primary.pug
block others
  a.overlay2(href="/")
  .container-fluid.all-goals
    .row
      .col-xs-2
      .col-xs-8
        .row
          .col-xs-12.form-header Unapproved others' goals
          .col-xs-12.form-body
            if offeredByMe.length > 0
              .row
                .col-xs-12.col-headers
                  .row
                    .col-xs-12
                      p Offered by me:
                  .row
                    .col-xs-5
                      p Goal
                    .col-xs-2 
                      p Offered to
                    .col-xs-1 
                      p Initial score
                    .col-xs-1 
                      p Target score
                    .col-xs-1 
                      p Status
                    .col-xs-2
                      p Actions
                .col-xs-12.col-data
                  each goal in offeredByMe
                    .row
                      .col-xs-5 #{goal.offer.name}
                      .col-xs-2 #{goal.owner.name}
                      .col-xs-1 #{goal.offer.initScore}
                      .col-xs-1 #{goal.offer.targScore}
                      .col-xs-1 #{goal.status}
                      .col-xs-2
                        a(href="/negotiateMyOffered/" + goal.id title="Negotiate")
                          i.far.fa-comment(style="font-size:24px")
                        a(href="/reject/" + goal.id title="Reject")
                          i.fa.fa-remove(style="font-size:24px")
            if createdByOthers.length > 0
              .row
                .col-xs-12.col-headers
                  .row
                    .col-xs-12
                      p Created by others
                  .row
                    .col-xs-5
                      p Goal
                    .col-xs-2
                      p Created by
                    .col-xs-1 
                      p Initial score
                    .col-xs-1 
                      p Target score
                    .col-xs-1 
                      p Status
                    .col-xs-2
                      p Actions
                .col-xs-12.col-data
                  each goal in createdByOthers
                    .row
                      .col-xs-5 #{goal.name}
                      .col-xs-2 #{goal.owner.name}
                      .col-xs-1 #{goal.initScore}
                      .col-xs-1 #{goal.targScore}
                      .col-xs-1 #{goal.status}
                      .col-xs-2
                        a(href="/approve/" + goal.id title="Accept")
                          i.far.fa-check-square(style="font-size:24px")
                        a(href="/negotiateTheirOwn/" + goal.id title="Negotiate")
                          i.far.fa-comment(style="font-size:24px")
                        a(href="/reject/" + goal.id title="Reject")
                          i.fa.fa-remove(style="font-size:24px")
            if createdByOthers.length == 0 && offeredByMe.length == 0
              .row
                .col-xs-12.col-headers
                  p There are no others' unapproved goals to display
      .col-xs-2
  block reject
  block approve
  block negotiateMyOffered
  block negotiateTheirOwn

